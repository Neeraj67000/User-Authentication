<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/@coreui/coreui@5.3.1/dist/css/coreui.min.css" rel="stylesheet">
    <title>Dashboard page</title>
    <script defer src="https://cdn.jsdelivr.net/npm/@coreui/coreui@5.3.1/dist/js/coreui.bundle.min.js"></script>
</head>

<body class="bg-black">
    <nav class="navbar navbar-expand-lg bg-secondary">
        <div class="container-fluid">
            <a class="navbar-brand text-light" href="#">
                <%= useName %>
            </a>
            <button class="navbar-toggler" type="button" data-coreui-toggle="collapse"
                data-coreui-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll">
                    <li class="nav-item">
                        <a class="nav-link active text-light" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-light" href="#" role="button"
                            data-coreui-toggle="dropdown" aria-expanded="false">
                            Action
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item " href="/">Signup</a></li>
                            <li><a class="dropdown-item " href="/logout">Logout</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
                <div class="d-flex">
                    <div class="avatar bg-primary text-white">
                        <%= avatarName %>
                            <span class="avatar-status bg-success"></span>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="pt-5 container-fluid">
        <h1 class="fs-3 text-light m-0">Welcome, <%= useName %>
        </h1>
    </div>
    <div class="pt-0 container-fluid">
        <h1 class="fs-6 m-0 text-light font-weight-light">You can Create a Post.</h1>
        <form class="w-25 mt-4" action="/post" method="post">
            <textarea class="form-control bg-transparent text-light resize-none" id="exampleFormControlTextarea1"
                rows="3" name="post" placeholder="What's on your mind"></textarea>
            <button type="submit" class="btn btn-light mt-2">Create New Post</button>
        </form>
    </div>
    <div class="pt-5 container-fluid d-flex flex-column gap-3 ">
        <% if (ejsPostData) { ejsPostData.forEach(myPost=> { %>
            <div class="card w-50 border-0">
                <div class="border border-light card-body rounded" style="background-color: rgb(39 39 42);">
                    <h5 class="card-title text-info">
                        @<%= useName %>
                    </h5>
                    <p class="card-text text-light">
                        <%= myPost.postData %>
                    </p>
                    <% if (myPost && myPost.isLiked) { %>
                        <a href="/post-like/<%= myPost._id %>"
                            class="text-decoration-none card-link text-danger">UnLike</a>
                        <% } else { %>
                            <a href="/post-like/<%= myPost._id %>" class="text-decoration-none card-link text-info">
                                Like</a>
                            <% } %>
                                <a href="/post-edit/<%= myPost._id %>"
                                    class="text-decoration-none card-link text-light">Edit</a>
                                <a href="/post-delete/<%= myPost._id %>"
                                    class="text-decoration-none card-link text-danger">Delete</a>
                </div>
            </div>
            <% })} %>
    </div>

</body>

</html>